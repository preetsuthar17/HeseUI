{
  "name": "hextaui-base-ui",
  "version": "0.1.0",
  "private": true,
  "description": "A collection of UI components built with BaseUI and styled with HextaUI design system",
  "keywords": ["ui", "components", "react", "shadcn", "baseui", "hextaui"],
  "author": "Preet Suthar <hi@preetsuthar.me>",
  "license": "MIT",
  "shadcn": {
    "registry": {
      "namespace": "@heseui",
      "url": "https://base.hextaui.com/r/{name}.json",
      "components": [
        "accordion",
        "alert-dialog",
        "avatar",
        "button",
        "checkbox",
        "checkbox-group",
        "collapsible",
        "context-menu",
        "dialog",
        "field",
        "fieldset",
        "form",
        "input",
        "menu",
        "menubar",
        "meter",
        "navigation menu",
        "number field",
        "popover",
        "preview-card",
        "progress",
        "radio",
        "scrollarea",
        "select",
        "separator",
        "slider",
        "switch",
        "tabs",
        "toast",
        "toggle",
        "togglegroup",
        "toolbar",
        "tooltip"
      ]
    }
  },
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "format": "npx ultracite@latest format",
    "lint": "npx ultracite@latest lint",
    "check": "tsc --noEmit",
    "registry:build": "shadcn build"
  },
  "dependencies": {
    "@base-ui-components/react": "1.0.0-beta.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.539.0",
    "next": "15.4.6",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "react-element-to-jsx-string": "^17.0.1",
    "react-icons": "^5.5.0",
    "shadcn": "2.9.3-canary.0",
    "shiki": "^1.29.2",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.0",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^24",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.3.7",
    "typescript": "^5",
    "ultracite": "5.1.8"
  }
}
